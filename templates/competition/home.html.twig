	<link rel="stylesheet" href="{{asset('themes/back/vendors/mdi/css/materialdesignicons.min.css')}}"/>
{% endblock %}
{% block body %}
	{% include "partials/_navbar_front.html.twig" %}
    {% block header %}
		<!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Les épreuves des concours</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Retrouver sur la plateforme les épreuves de coucours et d'examen des différentes écoles des universités du Bénin</p>
                </div>
            </div>
        </header>
	{% endblock %}
	<!-- Section-->
    {% block content %}
    <section class="py-5 my-5">
    <div class="row">
		<div class="col-lg-12 grid-margin stretch-card m">
			<div class="card">
				<div class="card-body text-center">
					<h4 class="card-title">Les différents concours disponibles sur le site</h4>
					<p class="card-description">
						Table de tous les concours disponibles. &nbsp;
					</p>
					<div class="table-responsive" >
						<table class="table table-bordered">
							<thead>
								<tr>
                                    <th>Nom du concours</th>
                                    <th>Domaine</th>
                                    <th>Année du coucours</th>
                                    <th>Date d'ajout</th>
                                    <th>Fichier</th>
				    			</tr>
							</thead>
							<tbody>
								{% for competition in competitions %}
                                    <tr>
                                        <td>{{ competition.name }}</td>
                                        <td>{{ competition.domain }}</td>
                                        <td>{{ competition.academicYear}}</td>
                                        <td>{{ competition.addedAt ? competition.addedAt|date('d/m/Y') : '' }}</td>
                                        <td>
                                             <a class="badge badge-primary"  href="{{ asset("uploads/pdf/" ~ competition.fileName) }}">Télécharger(PDF)</a>
                                        </td>
									</tr>
								{% else %}
									<tr>
										<td colspan="6">Aucun concours trouvé</td>
									</tr>
								{% endfor %}
							</tbody>
						</table> <br>
						<div class="d-flex justify-content-center">
							{% do competitions.setPageRange(2) %}
							{{ knp_pagination_render(competitions, 'partials/_pagination.html.twig') }}
						</div>
					</div>
				</div>
			</div>
		</div>


	</div>
    </section>
                {% endblock %}
    <!-- Footer-->  
	{% include "partials/_footer_front.html.twig" %}

{% endblock %}
