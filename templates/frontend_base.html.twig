{% extends "base.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="{{asset('themes/front/css/styles.css')}}" rel="stylesheet" />
{% endblock %}
{% block body %}
	{% include "partials/_navbar_front.html.twig" %}
    {% block header %}
		<!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                 <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Recueil des épreuves d'examen et concours</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Retrouver sur la plateforme les épreuves de coucours et d'examen des différentes écoles des universités du Bénin</p>
                </div>
            </div>
        </header>
	{% endblock %}
	<!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    			{% block content %}{% endblock %}
            </div>
        </div>
    </section> 
    <!-- Footer-->  
	{% include "partials/_footer_front.html.twig" %}	
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{asset('themes/front/js/scripts.js')}}"></script>
{% endblock %}
