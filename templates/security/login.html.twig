{% extends 'auth_base.html.twig' %}


{# Page Meta title #}
{% set title = "Se connecter" %}
{% set description = "Connectez-vous pour continuer" %}
{% set keywords = "concours, Bénin, epreuves, pdf, université, ecole, filière"%}

{# Page Meta title #}
{% block title %}
	{{title}}
{% endblock %}
{% block fb_title %}
	{{title}}
{% endblock %}
{% block twitter_title %}
	{{title}}
{% endblock %}

{# Page Body class #}
{% block body_class %}{% endblock %}

{# Page meta informations #}
{% block descriptions %}
	{{description}}
{% endblock %}
{% block schema_description %}
	{{description}}
{% endblock %}
{% block twitter_description %}
	{{description}}
{% endblock %}
{% block open_graph_description %}
	{{description}}
{% endblock %}
{% block keywords %}
	{{keywords}}
{% endblock %}

{% block og_image %}
	{{ asset('img/logo.png')}}
{% endblock %}

{% block content %}
	<h4 class="text-center">StudentDocs</h4>
	<h6 class=" text-center font-weight-light">Connectez-vous</h6>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
	<form class="pt-3" method="post">
		<div class="form-group">
			<input class="form-control form-control-lg" type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus placeholder="Email">
		</div>
		<div class="form-group">
			<input type="password" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required placeholder="Mot de passe"></div>
		<div class="mt-3">
			<button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Se connecter</button>
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<div class="my-2 d-flex justify-content-between align-items-center">
			<div class="form-check form-check-flat form-check-primary">
				<label class="form-check-label">
					<input type="checkbox" class="form-check-input" name="_remember_me">
					Se souvenir de moi
					<i class="input-helper"></i>
				</label>
			</div>
			<a href="" class="auth-link text-black">Mot de passe oublié ?</a>
		</div>
		<div class="text-center mt-4 font-weight-light">
			Pas de compte ?
			<a href="{{path('app_register')}}" class="text-primary">Créez-en un</a>
		</div>
	</form>
{% endblock %}
