{% block content %}
{% for school in schoools %}
    <div class="col mb-5">
        <div class="card h-100">
            <img src="{{ asset("uploads/logo/" ~ school.logo) }}" alt="{{school.name}}">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h5 class="fw-bolder">{{ school.name }}</h5>
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="{{ path('app_school_active_from_school_index', {'id': school.id}) }}">Visiter les écoles </a></div>
                </div>
        </div>
    </div>
{% else %}
    <div class="text-center">
        <h4>Aucune école trouvée </h4>
    </div>
{% endfor %}
